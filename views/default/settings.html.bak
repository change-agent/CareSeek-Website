{{extend 'profile_layout.html'}}
{{block profile_content}}

<div class="container-fluid">
    <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1">
        <h1 class="page-header">Settings</h1>
        <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="row">
                <!-- Current Email -->
                <label>Your Email:</label>
                <div class="row">
                    <div class="col-xs-11 col-sm-11 col-md-11" id="email" name="email"> {{=user.email}} </div>
                    <div class="col-xs-1 col-sm-1 col-md-1 ">
                        <input type="submit" name="submit" value="Edit" class="btn btn-primary pull-right" id="editEmail">
                    </div>
                </div>
                <!-- Change email form -->
                    <div class="panel-body" id="editEmailBox" style="display: none">
                        <form role='form'>
                            <div class="form-group">
                                <label>Enter new email</label>
                                <div class="input-group">
                                    <input type="email" class="form-control" id="emailInput" name="newEmail" placeholder="example@email.com">
                                    <span class="input-group-btn">
                                        <input class="btn btn-primary pull-right" type="submit" name="submit" value="Save" id="saveEmail" onclick="ajax('{{=URL('default', 'updateEmail')}}',['newEmail'],'email');"></input>
                                    </span>
                                </div>
                            </div>
                        </form>
                    </div>
             </div> <!-- End of email setting -->

            <div class="row">
                <!-- Current password -->
                <label>Your Password:</label>
                <div class="row">
                    <div class="col-xs-11 col-sm-11 col-md-11"> ••••••••••••• </div>
                    <div class="col-xs-1 col-sm-1 col-md-1 ">
                        <input type="submit" name="submit" value="Edit" class="btn btn-primary pull-right" id="editPass">
                    </div>
                </div>
                <!-- Change Pass form -->
                <div class="panel-body" id="editPassBox" style="display: none">
                    <form role='form'>
                       <div class="form-group">
                            <label for="">Old password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="oldPass" name="oldPass" placeholder="Enter old password">
                                <span class="input-group-addon"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="">New password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="newPass" name="newPass" placeholder="Enter new password...">
                                <span class="input-group-addon"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="">Confirm new password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="confNewPass" name="confNewPass" placeholder="Enter new password again...">
                                <span class="input-group-addon"></span>
                            </div>
                        </div>
                        <input class="btn btn-primary pull-right" type="submit" name="submit" value="Save" id="saveEmail" onclick="ajax('{{=URL('default', 'updatePass')}}',['oldPass', 'newPass', 'confNewPass'],'oldPass');"></input>
                    </form>
                </div>
             </div> <!-- End of password setting -->

            <div class="row">
                <!-- Current Interests -->
                <label>Your Interests:</label>
                <div class="row">
                    <div class="col-xs-11 col-sm-11 col-md-11">
						{{value = ''}}
                        {{for item in role.Interests:
                            value += item
                        }}
                        {{pass}}
                        <input class="col-xs-11 col-sm-11 col-md-11" type="text" id="interests" name="interests" value='{{=value}}' data-role="tagsinput"></input>
                    </div>
                    <div class="col-xs-1 col-sm-1 col-md-1 ">
                        <input type="submit" name="submit" value="Edit" class="btn btn-primary pull-right" id="editInterests">
                    </div>
                </div>
                <!-- Change Interests form -->
                <div class="panel-body" id="editInterestBox" style="display:none">
                    <form role='form'>
                       <div class="form-group">
                            <label for="">Update Interests:</label>
                            <div class="input-group">
                                <input type="text" id="newInterests" name="newInterests" value='{{=value}}' data-role="tagsinput"/>
                            </div>
                            <input class="btn btn-primary pull-right" type="submit" name="newInterests" value="Save" id="saveInterests" onclick="ajax('{{=URL('default', 'updateInterest')}}',['newInterests'],'interests');"></input>
                        </div>
                        
                    </form>
                </div>
             </div> <!-- End of interests setting --> 
            
            <div class="row">
                <!-- Current Contact -->
                <label>Your contact number:</label>
                <div class="row">
                    <div class="col-xs-11 col-sm-11 col-md-11"> {{=user.Phone}} </div>
                    <div class="col-xs-1 col-sm-1 col-md-1 ">
                        <input type="submit" name="submit" value="Edit" class="btn btn-primary pull-right" id="editPhone" name="editPhone">
                    </div>
                </div>
                <!-- Change Contact form -->
                <div class="panel-body" id="editPhoneBox" style="display:none">
                    <form role='form'>
                       <div class="form-group">
                            <label for="">Update contact number</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="newPhoneInput" name="newPhoneInput" placeholder="Enter new contact number">
                                <span class="input-group-btn">
                                    <input class="btn btn-primary pull-right" type="submit" value="Save" id="savePhone" onclick="ajax('{{=URL('default', 'updatePhone')}}',['newPhoneInput'],'editPhone');"></input>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
             </div> <!-- End of Contact setting --> 
            
            <div class="row">
                <!-- Current Desc -->
                <label>About me:</label>
                <div class="row">
                    <pre class="col-xs-11 col-sm-11 col-md-11" name="editAboutMe"> {{=user.AboutMe}} </pre>
                    <div class="col-xs-1 col-sm-1 col-md-1 ">
                        <input type="submit" name="submit" value="Edit" class="btn btn-primary pull-right" id="editAboutMe">
                    </div>
                </div>
                <!-- Change Contact form -->
                <div class="panel-body" id="editAboutMeBox" style="display:none">
                    <form role='form'>
                       <div class="form-group">
                            <label for="">Update About me</label>
                            <div class="input-group">
                                <textarea type="text" class="form-control" id="newAboutMe" name="newAboutMe" value="heyho">{{=user.AboutMe}}</textarea>
                                <span class="input-group-addon"></span>
                            </div>
                        </div>
                        <input class="btn btn-primary pull-right" type="submit" value="Save" id="saveAboutMe" onclick="ajax('{{=URL('default', 'updateDesc')}}',['newAboutMe'],'editAboutMe');"></input>
                    </form>
                </div>
             </div> <!-- End of Contact setting -->

            {{if user.User_Type == "Carer":}}
                <div class="row">
                    <!-- Current CV -->
                    <label>Update your CV:</label>
                    <div class="row">
							<div class="col-xs-11 col-sm-11 col-md-11"> 
								{{if(user.User_Type == "Carer" and cvUrl != '/master/default/download'):}}
									<a href="{{=cvUrl}}">Cick to view</a> 
								{{else:}}
									<a href="">No CV currently uploaded!</a> 
								{{pass}}
							</div>
                        <div class="col-xs-1 col-sm-1 col-md-1">
                            <input type="submit" name="submit" value="Edit" class="btn btn-primary pull-right" id="editCV" name="editCV">
                        </div>
                    </div>

                    <!-- Change CV form -->
                    <div class="panel-body" id="editCVBox" style="display:none">
                        <form role='form'>
                           <div class="form-group">
                                <label for="">Upload new CV</label>
                                <div class="input-group">
                                    <input type="file" id="newCV" name="newCV" title="Search for a file to add">
                                </div>
                            </div>
                            <input class="btn btn-primary pull-right" type="submit" value="Save" id="saveCV" onclick="ajax('{{=URL('default', 'updateCV')}}',['newCV'],'editCV');"></input>
                        </form>
                    </div>
                 </div> <!-- End of CV setting --> 
			{{pass}}
                <div class="row">
                    <!-- Current Pic -->
                    <label>Change your Profile picture:</label>
                    <div class="row">
							<div class="col-xs-11 col-sm-11 col-md-11"> 
								{{if user.MyPict != '/master/default/download':}}
									<img src="{{=URL('download',args=user.MyPict)}}">
								{{else:}}
									<a href="">No Profile picture currently uploaded!</a> 
								{{pass}}
							</div>
                        <div class="col-xs-1 col-sm-1 col-md-1">
                            <input type="submit" name="submit" value="Edit" class="btn btn-primary pull-right" id="editPic" name="editPic">
                        </div>
                    </div>

                    <!-- Change Pic form -->
                    <div class="panel-body" id="editPicBox" style="display:none">
                        <form role='form'>
                           <div class="form-group">
                                <label for="">Upload new pciture</label>
                                <div class="input-group">
                                    <input type="file" id="newPic" name="newPic" title="Search for a file to add">
                                </div>
                            </div>
                            <input class="btn btn-primary pull-right" type="submit" value="Save" id="savePic" onclick="ajax('{{=URL('default', 'updatePic')}}',['newPic'],'editPic');"></input>
                        </form>
                    </div>
                 </div> <!-- End of Pic setting -->
         </div>
    </div>  
</div>
<script src="{{=URL('static/js','settings.js')}}"></script>
<script src="{{=URL('static/js','bootstrap-tagsinput.min.js')}}"></script>
{{end}}
